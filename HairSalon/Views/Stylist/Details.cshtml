<h1>@Model["selectedStylist"].GetStylistName()</h1>
<hr/>
@if (@Model["selectedSpecialties"].Count != 0)
{
  <h2>Specialties:</h2>
  <ul>
    @foreach(var specialty in Model["selectedSpecialties"])
    {
    <li>@specialty.GetSpecialtyName()</li>
    }
  </ul>
}
<h4>Add Specialty for @Model["selectedStylist"].GetStylistName():</h4>
<form action='/stylists/@Model["selectedStylist"].GetStylistId()/specialties/new' method='post'>
  <label for='specialtyid'>Select a specialty</label>
  <select id='specialtyid' name='specialtyid' type='text'>
    @foreach (var specialty in @Model["allSpecialties"])
    {
      <option value='@specialty.GetSpecialtyId()'>@specialty.GetSpecialtyName()</option>
    }
  </select>
  <button type='submit'>Add</button>
</form>
@if (@Model["selectedClients"].Count != 0)
{
<h2>Clients:</h2>
  <ul>
    @foreach(var client in Model["selectedClients"])
    {
    <li>@client.GetClientName()</li>
    }
  </ul>
}
<p><a href='/clients/new'>Add new client</a></p>
<p><a href='/stylists/new'>Add another stylist</a></p>
<p><a href='/stylists'>View all stylists</a></p>
